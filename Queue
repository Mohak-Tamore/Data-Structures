#include<stdio.h>
#define MAX 5
int FRONT=-1, REAR=-1;
int queue[MAX];
void enqueue();
void dequeue();
void display();
void peek();
void main()
{
 int ch, n;
 while(1)
 {
  printf("\nEnter your choice: ");
  printf("\n1.Insert\n2.Delete\n3.Display\n4.Peek\n5.Exit\n");
  scanf("%d",&ch);
  switch(ch)
  {
   case 1:
   {
    enqueue();
    break;
   }
   case 2:
   {
    dequeue();
    break;
   }
   case 3:
   {
    display();
    break;
   }
   case 4:
   {
    peek();
    break;
   }
   case 5:
   {
    exit(1);
   }
   default:
   {
    printf("\nWrong choice");
    break;
   }
  }
 }
}

void enqueue()
{
 int n;
 if(REAR >= MAX-1)
 {
  printf("\nQueue overflow");
 }
 else
 {
  printf("\nEnter element: ");
  scanf("%d",&n);
  REAR++;
  queue[REAR] = n;
 }
 if(FRONT == -1)
 {
  FRONT = 0;
 }
}

void dequeue()
{
 if(FRONT==-1  || REAR<FRONT)
 {
  printf("\nQueue underflow");
 }
 else
 {
  printf("\nElement to be deleted: %d",queue[FRONT]);
  FRONT++;
 }
}

void display()
{
 int i;
 if(FRONT==-1 || REAR<FRONT)
 {
  printf("\nQueue underflow");
 }
 else
 {
  printf("\nElements are: ");
  for(i=FRONT; i<=REAR; i++)
  {
   printf("\t%d",queue[i]);
  }
 }
}

void peek()
{
 if(FRONT==-1)
 {
  printf("\nQueue underflow");
 }
 else
 {
  printf("\nFirst element added: %d",queue[FRONT]);
 }
}
